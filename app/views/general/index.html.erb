	<!--Menu principal y lateral-->
	<div class="main-agile">
		<!-- banner -->
		<div class="agile-top">
			<div class="col-xs-4 logo">
				<h1>
					<a href="index.html">
						<span>Eco</span>rum
						<span><img style="width: 50%; height: 50%;" src="/assets/logo.png"></a>
				</h1>
			</div>
			<div class="col-xs-6 header-w3l">
				<ul>
					<li>
						<a href="#" data-toggle="modal" data-target="#myModal1">
							<i class="fas fa-unlock-alt" aria-hidden="true"></i> Ingresa </a>
					</li>
					<li>
						<a href="#" data-toggle="modal" data-target="#myModal2">
							<i class="fas fa-edit" aria-hidden="true"></i> Registrate </a>
					</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="modal fade" id="myModal1" tabindex="-1" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body modal-body-sub_agile">
					<div class="main-mailposi">
						<span class="fa fa-envelope-o" aria-hidden="true"></span>
					</div>
					<div class="modal_body_left modal_body_left1">
						<h3 class="agileinfo_sign">Ingresa</h3>
						<p>
							Ingresa y podrás ser parte de esta comunidad que busca ayudar al ambiente
							<a href="#" data-toggle="modal" data-target="#myModal2">
								Registrate ahora</a>
						</p>
						<form action="/" method="POST" onsubmit="return validarLogin()">
							<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
							<div class="styled-input agile-styled-input-top">
								<input type="text" placeholder="Correo Electrónico" id="logname" name="name" required="">
							</div>
							<div class="styled-input">
								<input type="password" placeholder="Contraseña" id="logpass" name="password" required="">
							</div>
							<input type="submit" value="Ingresar">
							<p style="color: #f00;" id="myplog"></p>
						</form>
						<div class="clearfix"></div>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
			<!-- //Modal content-->
		</div>
	</div>
	<!-- //Modal1 -->
	<!-- //signin Model -->
	<!-- signup Model -->
	<!-- Modal2 -->
	<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body modal-body-sub_agile">
					<div class="main-mailposi">
						<span class="fa fa-envelope-o" aria-hidden="true"></span>
					</div>
					<div class="modal_body_left modal_body_left1">
						<h3 class="agileinfo_sign">Registrate</h3>
						<p>
							únete a nuestra comunidad
						</p>
						<form action="/" method="POST" onsubmit="return registrar()">
							<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
							<div class="styled-input agile-styled-input-top">
								<input type="text" placeholder="Nombre" name="name" id="namereg" required="">
							</div>
							<div class="styled-input">
								<input type="email" placeholder="Correo" name="email" id="emailreg" required="">
							</div>
							<div class="styled-input">
								<input type="password" placeholder="Contraseña" name="password" id="password1" required="">
							</div>
							<div class="styled-input">
								<input type="password" placeholder="Confirmar Contraseña" name="password2" id="password2" required="">
							</div>
							<input type="radio" class="messageCheckbox" name="optradio" value="normal" checked hidden>
							<input type="hidden"  name="mysubmit" id="mysubmit" value="registroNormal">
							<input type="submit" value="Registrar">
							<p style="color: #f00;" id="mypreg"></p>
						</form>
						<p>
							<a href="#">Acepto los términos y condiciones</a>
						</p>
					</div>
				</div>
			</div>
			<!-- //Modal content-->
		</div>
	</div>

	<!--Slide inicio-->
	<div class="slider">
		<div class="callbacks_container">
			<ul class="rslides callbacks callbacks1" id="slider4">
				<li>
					<div class="w3layouts-banner-top banner">
						<div class="container">
							<div class="agileits-banner-info">
								<h3>Ayudanos a Salvar el Mundo</h3>
								<p>Únete a nuestra comunidad
									<i class="fas fa-tree" aria-hidden="true"></i> juntos haremos el cambio</p>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
		<div class="clearfix"> </div>
	</div>


